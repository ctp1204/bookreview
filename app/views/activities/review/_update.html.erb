<% if activity.target %>
  <i><%= t "view.activities.review.update_review" %></i> " <%= link_to activity.target.book_title, activity.target.book %> "
  <i><%= time_ago_in_words(activity.created_at) %></i>
<% else %>
  <%= t "view.activities.review.remove_review" %>
  <i><%= time_ago_in_words(activity.created_at) %></i>
<% end %>
